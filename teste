<script>
const imgCerta = "https://uploads.onecompiler.io/444jywmud/444jyqxv3/chat.png";
const imgErrada = "https://uploads.onecompiler.io/444jywmud/444jyqxv3/erro.png";

const perguntas = [
  { pergunta: "üìö Portugu√™s: Qual dessas palavras est√° escrita corretamente?",
    opcoes: ["Excess√£o", "Exce√ß√£o", "Exce√ß√¢o"], certa: 1 },
  { pergunta: "üßÆ Matem√°tica: Quanto √© 9 + 6?",
    opcoes: ["15", "14", "16"], certa: 0 },
  { pergunta: "üåé Geografia: Qual √© o maior continente do mundo?",
    opcoes: ["√Åfrica", "√Åsia", "Europa"], certa: 1 },
  { pergunta: "üî¨ Ci√™ncias: Qual parte do corpo bombeia o sangue?",
    opcoes: ["C√©rebro", "Pulm√£o", "Cora√ß√£o"], certa: 2 },
  { pergunta: "üèõÔ∏è Hist√≥ria: Quem descobriu o Brasil?",
    opcoes: ["Crist√≥v√£o Colombo", "Pedro √Ålvares Cabral", "Dom Pedro II"], certa: 1 }
];

let indice = 0;
const professor = document.getElementById("professor");
const feedback = document.getElementById("feedback");

function mostrarPergunta() {
  const q = perguntas[indice];
  document.getElementById("question").textContent = q.pergunta;

  const respostasDiv = document.getElementById("answers");
  respostasDiv.innerHTML = "";
  feedback.textContent = "";

  professor.style.backgroundImage = `url(${imgCerta})`;

  q.opcoes.forEach((opcao, i) => {
    const btn = document.createElement("button");
    btn.textContent = opcao;
    btn.onclick = () => checkAnswer(i === q.certa);
    respostasDiv.appendChild(btn);
  });
}

function checkAnswer(certa) {
  if (certa) {
    feedback.textContent = "üéâ Muito bem!";
    feedback.className = "feedback correct";
    professor.style.backgroundImage = `url(${imgCerta})`;
    professor.style.animation = "jump 0.6s";

    setTimeout(() => {
      professor.style.animation = "idle 3s ease-in-out infinite";
      indice++;
      if (indice < perguntas.length) {
        mostrarPergunta();
      } else {
        document.querySelector(".quiz-container").innerHTML =
          "<h1>üéä Parab√©ns! Voc√™ terminou o quiz! üëè</h1>";
      }
    }, 600);

  } else {
    feedback.textContent = "üòÖ Tente novamente!";
    feedback.className = "feedback wrong";
    professor.style.backgroundImage = `url(${imgErrada})`;

    professor.style.animation = "shake 0.5s";

    setTimeout(() => {
      professor.style.animation = "idle 3s ease-in-out infinite";
    }, 500);
  }
}

mostrarPergunta();
</script>

